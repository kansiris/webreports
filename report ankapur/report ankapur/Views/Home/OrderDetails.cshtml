    @if (ViewBag.check == "Y")
    {
        <h4> Order Details</h4>
        <table class="table table-striped table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ProductName</th>
                    <th>Quantity</th>
                    <th>TotalPrice</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.data)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>Rs.@(item.Price * item.Quantity )</td>
                    </tr>
                }
            </tbody>
            </table>
            }
</div>

